.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 60rpx;
}

/* 导航栏样式 */
.navbar {
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eee;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 会员卡片样式 */
.membership-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-header {
  padding: 40rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #2fc6a6, #07C160); /* 从浅绿到深绿的渐变 */
  color: #ffffff;
}

.card-badge {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.card-price {
  margin-bottom: 10rpx;
}

.price-number {
  font-size: 60rpx;
  font-weight: bold;
}

.price-period {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.price-saving {
  font-size: 26rpx;
  opacity: 0.9;
}

.card-divider {
  height: 1rpx;
  background-color: #f5f5f5;
}

.card-benefits {
  padding: 30rpx;
}

.benefits-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
}

.benefits-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #555555;
  padding: 10rpx;
  border-radius: 10rpx;
  transition: background-color 0.2s;
}

.benefit-item:hover {
  background-color: #f9f9f9;
}

.benefit-icon {
  margin-right: 15rpx;
}

/* 支付按钮样式 */
.pay-button {
  background: linear-gradient(135deg, #2fc6a6, #07C160); /* 从浅绿到深绿的渐变 */
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  margin: 30rpx 30rpx 15rpx;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.3);
  transition: background-color 0.2s;
}

.pay-button:not([disabled]):hover {
  background-color: #00B42A;
}

.pay-button[disabled] {
  background-color: #a5e6ba;
}

/* 说明文字样式 */
.info-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.link-text {
  color: #07C160;
  text-decoration: underline;
  margin: 0 5rpx;
}

/* 微信支付标志 */
.wechat-pay-logo {
  display: flex;
  justify-content: center;
}

.logo-img {
  width: 120rpx;
  opacity: 0.6;
}
