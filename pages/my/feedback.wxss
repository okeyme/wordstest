.feedback-container {
  background-color: #f5f5f5; width: 100%;
}

.feedback-item {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.item-title {
  font-size: 16px;
  color: #333333;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
}

.required {
  color: #ff4d4f;
  margin-left: 4px;
}

.tips {
  font-size: 14px;
  color: #999999;
  margin-left: 8px;
}

.description-input {
  width: 100%;
  min-height: 120px;
  padding: 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  font-size: 14px;
  color: #333333;
  box-sizing: border-box;
  resize: none;
}

.description-input::placeholder {
  color: #bbbbbb;
}

.char-count {
  text-align: right;
  font-size: 12px;
  color: #999999;
  margin-top: 8px;
}

.upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.image-item {
  width: 96px;
  height: 96px;
  border-radius: 8px;
  position: relative;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  display: block;
}

.delete-btn {
  position: absolute;
  top: -6px;
  right: -6px;
  width: 24px;
  height: 24px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.upload-btn {
  width: 96px;
  height: 96px;
  border: 1px dashed #e5e5e5;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
  background-color: #fafafa;
}

.upload-text {
  font-size: 12px;
  margin-top: 8px;
}

.submit-btn {
  width: 100%;
  height: 48px;
  background-color: #07c160;
  color: white;
  border-radius: 24px;
  font-size: 16px;
  margin-top: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:disabled {
  background-color: #cccccc;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-container {
  width: 80%;
  max-width: 300px;
  background-color: white;
  border-radius: 16px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon {
  margin-bottom: 16px;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8px;
}

.modal-content {
  font-size: 14px;
  color: #666666;
  text-align: center;
  margin-bottom: 24px;
}

.modal-btn {
  width: 100%;
  height: 40px;
  background-color: #07c160;
  color: white;
  border-radius: 20px;
  font-size: 16px;
}
