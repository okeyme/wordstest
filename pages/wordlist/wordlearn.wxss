/*==tab导航样式==*/
.tab-scroll {
  width: 100%;
	white-space: nowrap;
  z-index: 100;
}
::-webkit-scrollbar{
  display: none;
  color: transparent;
  display: none;
  height: 0;
  width: 0;
}
.content-swiper {
	width: 100%; height: 100%;
  /*flex: 1; 
  display: flex;
  justify-content: center;
  align-items: center;
  overflow-y: auto;  */
}
.tab-item-wrapper {
  display:inline-flex;
  padding: 0;
}
.tab-item {
  display: inline-block;
	height: 90rpx;
	max-width: 306rpx; overflow-x: hidden;
	text-overflow: ellipsis; /* 超出部分显示省略号 */
  line-height: 90rpx;
  padding: 0 30rpx;
  position: relative;
  font-size: 32rpx;
	color: #666; overflow-y:hidden;
}
.tab-item .wordhide{ position: absolute;width:100%;height: 100%;top:0;left:0; /* 背景半透明（可选，增强毛玻璃层次感） */
  background-color: rgba(249, 249, 249, 0.5); 
  /* 核心：背景模糊效果，数值越大越模糊 */
  backdrop-filter: blur(3px); 
  /* 兼容 Safari（部分浏览器需加前缀） */
	-webkit-backdrop-filter: blur(3px);
 }

.tab-item.active {
  color: #2fc6a6;
  font-weight: bold;
}
.indicator {
  display: none;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #2fc6a6;
}

.indicator.show {
  display: block;
}

/* ===步骤进度条=== */
/* 容器样式，设置为横向布局 */
.progress-container {
  display: flex;
  border-radius: 20px;
  padding: 10px 20px;
  /* 隐藏超出部分，避免引导线溢出 */
  overflow: hidden; 
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 10px;
  position: relative; 
  /* 固定宽度，确保引导线对齐 */
  width: 50px; 
}

.step-icon {
  width: 28px;
  height: 28px;
  border-radius: 50%;
	background-color: #bde2de;
	border:1px solid #bde2de;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 14px;
}
.step-icon.active{border-color: #2fc6a6;}
.step-icon.done {background-color: #2fc6a6;border-color: #2fc6a6;}
.step-text {font-size: 12px;margin-top: 5px;color: #666; }

.guide-line {
  position: absolute;
  top: 15px;
  left: 100%;
