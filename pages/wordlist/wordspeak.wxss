/* 波浪动画区域 */
.wave-animation {
  width: 172rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
	justify-content: space-around;
	margin:0 auto;
  margin-bottom: 20rpx;
}

/* 波浪条样式 */
.wave-bar {
  width: 16rpx;
  background-color: #fb0; /* 绿色波浪 */
  border-radius: 8rpx;
  /* 动画参数：名称、时长、速度曲线、延迟、循环次数、方向 */
  animation: wave 0.8s ease-in-out 0s infinite alternate;
}

/* 每个波浪条可单独调整时长和延迟，保持错落感 */
.bar1 { animation-duration: 0.8s; animation-delay: 0.1s; }
.bar2 { animation-duration: 0.7s; animation-delay: 0.2s; }
.bar3 { animation-duration: 0.9s; animation-delay: 0.3s; }
.bar4 { animation-duration: 0.6s; animation-delay: 0.4s; }
.bar5 { animation-duration: 0.8s; animation-delay: 0.5s; }

/* 波浪动画关键帧（高度变化） */
@keyframes wave {
  0% {
    height: 10rpx;
  }
  100% {
    height: 70rpx;
  }
}


