.container {
  padding: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.card-container {
  width: 100%;
}

.card {
	background-color: #f5f5f5;
	height: 120rpx;
	padding:10rpx;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

/* 单词卡片样式 */
.word-card {
	color: #dc3545;
}

/* 释义卡片样式 */
.card.trans-card {
   font-size: 24rpx;
}

/* 选中状态 */
.selected {
  transform: scale(1.05);
	box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
	background-color: #e4fdfa; 
}

/* 正确状态（消除前闪烁+变色） */
.correct {
  animation: correctFlash 0.5s;
	background-color: #e4fdfa !important;
}
.correct.noValue {
  animation: correctFlash 0.5s;
	background-color: white !important;
	box-shadow:none;
}

/* 错误状态（闪烁+变红） */
.wrong {
  animation: wrongFlash 0.5s;
  background-color: #f96868 !important;
  color: #fff;
}

/* 正确闪烁动画 */
@keyframes correctFlash {
  0% { opacity: 1; }
  50% { opacity: 0.3; }
  100% { opacity: 1; }
}

/* 错误闪烁动画 */
@keyframes wrongFlash {
  0% { opacity: 1; }
  50% { opacity: 0.3; }
  100% { opacity: 1; }
}
