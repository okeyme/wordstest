<!--pages/wordlist/index.wxml-->
<wxs src="../../utils/array.wxs" module="array" />
<view class="flex-container page-background">
	<header headerName="单元列表"></header>
	<view class="bottom-section-flex">
		<scroll-view scroll-y class="scrollview" style="width: 100%; height:100%;" type="custom">
			<view class="tabcontainer container">
				<view class="text-center text-gray text-small iconfont icon-a1 margin-bottom text-yellow"> 请选择一个或多个单元</view>
				<view class="category-item {{array.includes(selectList, index) ? 'active' : ''}}" wx:for="{{unitList}}"  wx:key="index" data-index="{{index}}" catchtap="selectCategory">
					<view class="checkmark"></view>
					<text class="category-name">{{item.category_name}}</text>
				</view>
			</view>
		</scroll-view>
	</view>
	<!--//工具栏-->
	<view class="tool foot-section grid-middle">
		<view class="flex flex-average flex-center">
		<view class="flex-item"></view>
		<view class="flex-item grid-middle"><button class="button" catchtap="{{modelList[model].url}}">{{modelList[model].txt}}</button></view>
		<view class="flex-item"></view>
		</view>
	</view>
</view>
