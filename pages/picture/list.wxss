/* pages/picture/list.wxss */
.header{background-color: #35aefd;}
.picture-item{padding:15rpx; max-height: 135px;}
.picture-item-content{ border: 1px solid #e8ebee; box-shadow: 2px 2px 3px 3px rgba(190, 190, 190, 0.5); border-radius: 32rpx;}
.picture-item image{ max-width:100%;}
.picture-item .pic{ padding:20rpx; padding-bottom: 0; }

.xunlian{ position: fixed;width:100%; bottom: 20rpx;left:0;}
.button.bg-main{background-color:#78cafa;  border-color:#78cafa;}




.popup{ position: fixed; z-index: 13;width:100%;bottom:0;left:0; display:none; min-height: 170.81px; }
.popup.active{display: block;}
.popup .popup-content{background-color:#78cafa;border-top-left-radius:32rpx;border-top-right-radius:32rpx;}
.popup-main{ vertical-align: top;}
.popup-main .popup-image{padding:20rpx;}
.popup-main .popup-translate{padding:20rpx;}
.popup-main image{ max-width:95%;border-radius:32rpx;}
.popup-main .popup-translate{ vertical-align: top;}
.popup-title{ position: relative;text-align: center;font-weight: bold;padding-top:10rpx;}
.popup .popup-title text{ font-size: 20px;}
.popup .popup-title text.text-small{font-size: 15px; line-height: 32px; color: rgb(80, 80, 80);}
.popup-title .popup-close{width:60rpx; height:50rpx; position:absolute;right:10rpx;top:5rpx;font-size: 20px;}
.popup-example{padding:20rpx; padding-top: 0;}
.popup-control{margin-top:20rpx; padding-top:10rpx;border-top:1px solid #cccccc; text-align: left;}
.popup-control text{font-size:30px;}
.popup-control text.icon-heart{font-size:26px;line-height: 48px;}
.popup-control .icon-volume-up.active{color:white;}
.popup-example view{ height:40rpx;}
.popup-example .example_translate{ padding-bottom:8rpx;}
.popup-example .exampleaudio,.popup-example .exampleaudio2{ width:60rpx;height:60rpx;display:inline-block;}
.popup-example .exampleaudio2{color:#f33d8c;}
.popup-example .exampleaudio.active,.popup-example .exampleaudio2.active{color:white;}
.categoryShadow{ position: fixed; top:0;left:0;z-index:11;width:100%;height:100%;background-color: rgba(12, 12, 12, 0.349); }