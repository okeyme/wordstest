.header{background-color: #2fc6a6;height:170rpx;}
/**==button group==**/
.view-group .view-button{ border: solid 1px #ddd;
	background: transparent;
	border-radius: 16px;
	font-size: 16px;
	padding: 10px 15px;
	margin: 0;
	display: inline-block;
	line-height: 20px;
	transition: all 1s cubic-bezier(0.175,0.885,0.32,1) 0s;
}
.view-group .view-button:first-child {
	border-top-right-radius: 0;
	border-bottom-right-radius: 0;
}
.view-group .view-button:last-child {
	border-top-left-radius: 0;
	border-bottom-left-radius: 0;
}
.view-group .view-button:last-child {
	border-top-left-radius: 0;
	border-bottom-left-radius: 0;
}
.view-group .view-button:not(:first-child):not(:last-child) {
	border-radius: 0;border-left:0;border-right:0;
}
/**==button group==**/
.view-group .view-button.active{ background-color: #2fc6a6;color:white;}
.translate{ position: relative; height: 120px; border: 1px solid #ddd; border-radius: 32rpx;margin-top:20rpx;}
.translate button{ display: block;border: 1px solid #ddd; background-color: #2fc6a6;color:white;}
.translate button::after{	border: 1px;}
.translate .voice-btn{
	width: 58px;
	height: 58px;
	display: block; text-align:center;
	line-height: 58px;
	background-color: #2fc6a6;
	color: white;
	margin: 0 auto;
	position: absolute;
	z-index: 9;
	left: 50%;
	top: 50%;
	margin-top: -39px;
	margin-left: -29px;
}
.translate .voice-btn text{ font-size:23px;}
.translate .voice-btn.active{ background-color: red;}
.translate .tips{ position: absolute; width: 100%; bottom:10rpx; left:0; font-size: 13px;}


.showtranslate{margin-top:10rpx; border: 1px solid #2fc6a6; border-radius: 32rpx;padding:20rpx;}
.showtranslate .transalte-item{ line-height: 60rpx}

.transalte-item .wordtext{width:90%;}
.transalte-item .wordaudio{width:10%;text-align: center;}
.transalte-item .wordaudio .image{ width:58rpx;height:48rpx;display:inline-block;background:url(https://w.360e.cn/miniapi/Public/images/sound_black.png) no-repeat center; vertical-align:middle;}
.transalte-item.active .wordaudio .image{ background-image:url(https://w.360e.cn/miniapi/Public/images/sound.gif);}



