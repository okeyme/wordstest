/* pages/yinbiao/pindu.wxss */
.header{background-color: #fed025;}
page{background-color: #f0eff5;}

.pdlist{margin-bottom: 10px; padding:3px;}
.pdlist .title{padding-left:5px; color: #0ae; margin-top: 10px;}
.pdlist .flex-view-item3 .itemcontent{
		margin:3px;
    background-color: white;
    border-radius: 10px;
}
.pdlist .word{font-weight: bold;padding: 5px;padding-bottom: 0px;}
.pdlist .phonogram{color:rgb(128, 126, 126);padding:0 5px;padding-bottom: 5px;}
.pdlist .itm-btn{border-top:1px solid rgb(236, 236, 236); width:92%;margin:0 auto; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px; color:rgb(87, 85, 85);}
.pdlist .itm-btn .sitemap{border-left:1px solid rgb(236, 236, 236); }
.pdlist .itm-btn .icon-volume-up.active{color:#f0bd06;}



.popup{ position: fixed; z-index: 13;width:100%;bottom:0;left:0; display:none; min-height: 170.81px; }
.popup.active{display: block;}
.popup .popup-content{background-color:#fae187;border-top-left-radius:32rpx;border-top-right-radius:32rpx;}
.popup-main{ vertical-align: top; padding:5px; padding-top:0;}
.popup-main .popup-image{padding:20rpx;}
.popup-main .popup-translate{padding:20rpx;}
.popup-main image{ max-width:95%;border-radius:32rpx;}
.popup-main .popup-translate{ vertical-align: top;}
.popup-title{ position: relative;text-align: center;font-weight: bold;padding-top:10rpx; font-size: 20px;}
.popup .popup-title .title rich-text{font-size: 20px;}
.popup .popup-title .text-small{font-size: 15px; line-height: 32px; color: rgb(80, 80, 80);}
.popup-title .popup-close{width:60rpx; height:50rpx; position:absolute;right:10rpx;top:5rpx;font-size: 20px;}
.popup-example{padding:20rpx; padding-top: 0;}
.popup-control{margin-top:10rpx; padding-top:10rpx;}
.popup-control text{font-size:25px;}
.popup-control text.icon-heart{font-size:26px;line-height: 48px;}
.popup .icon-volume-up.active{color:white;}
.popup-example view{ height:40rpx;}
.popup-example .example_translate{ padding-bottom:8rpx;}
.popup-example .exampleaudio,.popup-example .exampleaudio2{ width:60rpx;height:60rpx;display:inline-block;}
.popup-example .exampleaudio2{color:#f33d8c;}
.popup-example .exampleaudio.active,.popup-example .exampleaudio2.active{color:white;}
.categoryShadow{ position: fixed; top:0;left:0;z-index:11;width:100%;height:100%;background-color: rgba(12, 12, 12, 0.349); }

.zmletter{margin-top:10px;}