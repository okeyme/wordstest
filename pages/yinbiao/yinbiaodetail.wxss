/* pages/yinbiao/yinbiao.wxss */
.header{background-color: #fed025;}
.panel{
	margin-top:20rpx;
	border-radius: 10px;
	border: none;
	background-color: white;}

	.panel .panel-head {
    margin: 0 15px;
    border-color: #f0eff5;
    border-radius: 0;
    text-align: center;
    background: none;
    padding: 15px 0;
}

.panel .panel-head text {
	font-weight: bold;
	background: url(http://w.360e.cn/chinese/pinyin/cirle-bg.png) no-repeat 20px 8px;
	background-size: auto 40%;
	padding: 15px 30px;
}

.kouxing, .zhengren {
	position: relative;
	padding: 5px 0; width:100%;height: 100%;
}
.kouxing image, .zhengren image{
	width: 95%; /* 图片宽度等于容器宽度 */
  max-width: 95%; /* 最大宽度不超过容器 */
  height: auto; /* 高度自动计算，保持比例 */
}
.fysf image{ max-width: 95%;}
rich-text li {
  list-style-type: none;
  padding-left: 0;
  margin-left: 0;
}


.playlist{position: fixed;width:100%;left:0;bottom:0;background-color:white;border-top:1px solid #f0eff5;}
.playcontrol{ justify-content: center; align-items: center;}
.playcontrol .flex-item{justify-content: center; align-items: center;}
.playcontrol image{width:88rpx; height: 88rpx;}