/* pages/listen/image.wxss */
.header{background-color: #f29ec2;height:226rpx;}
.listennav{padding:8rpx 0;margin-top:16rpx;}
.listennav .item3:first-child{padding-left:20rpx;}
.listennav .item3:last-child{padding-right:20rpx;}
.listennav text{border:1px solid rgb(94, 94, 94);border-radius: 32rpx;font-size:13px;padding:6rpx 12rpx;color:rgb(94, 94, 94);}
.listennav .dir{ font-size: 13px;}
.listennav text.active{color:white;border-color:white;}

.listen-content image{ width:100%;}

.playlist{position: fixed;width:100%;left:0;bottom:0;}
.playcontrol{margin-top:10rpx;}
.playcontrol .item4{ text-align:center;}
.playcontrol image{width:88rpx; height: 88rpx;}

.categoryShadow{ position: fixed;top:0;left:0; z-index:11;width:100%;height:100%;background-color: rgba(12, 12, 12, 0.349); }
.categoryDir{ position: fixed; z-index:12; width: 90%; height: 60%; left: 5%; top: 20%; background-color: white;border-radius: 32rpx;}
.categoryDir-main{position: relative; border-radius: 32rpx; height: 100%;}
.categoryDir-main .categoryDir-title{position: absolute;width:100%;top:0;left:0; line-height: 64rpx;height:64rpx;background-color: white;z-index:13; border-radius: 32rpx;}
.categoryDir-main .dirClose{font-size:18px;padding-right:20rpx;}
.categoryDir .category-item{line-height: 40rpx;margin-top:30rpx;}
.categoryDir .category-item.active{color:#f33d8c;}
.category-item-page{padding-left:36rpx;padding-bottom: 6rpx;padding-top:5rpx;}
.category-item-page .category-item-page-item{ width:50rpx; height:50rpx; border:1px solid #f29ec2; border-radius: 50%; display: inline-block; text-align: center;font-size: 12px; line-height: 50rpx;margin-right:16rpx;margin-top: 6rpx;}
.category-item-page .category-item-page-item.active{background-color:#f29ec2;color: white;}