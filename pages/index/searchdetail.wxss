/* 拼写本容器，模拟四线格背景 */
.spelling-book {
	display: inline-block;
	margin:0 auto; 
  border-top: 1px solid #2fc6a6;
  border-bottom: 1px solid #2fc6a6;
  padding: 5px 20px;
  position: relative;
}
/* 生成中间两条虚线 */
.spelling-book::before,
.spelling-book::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  /* 使用线性渐变创建虚线效果 */
  background-image: linear-gradient(to right, #c5e9e5 50%, transparent 50%);
  background-size: 8px 1px; /* 虚线宽度和间隔 */
  background-repeat: repeat-x;
}

.spelling-book::before {
  top: 33%;
}
.spelling-book::after {
  top: 66%;
}
/* 单词所在行，让单词水平居中 */
.word-line {
