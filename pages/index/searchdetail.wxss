/*==tab导航样式==*/
.tab-scroll {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
	border-bottom: 1rpx solid #eee;
	white-space: nowrap;
	z-index: 100;

  display: flex;
  justify-content: center;
	align-items: center;
	-ms-overflow-style: none; /* IE/Edge 隐藏滚动条 */
  scrollbar-width: none; /* Firefox 隐藏滚动条 */
}
.tab-scroll::-webkit-scrollbar{ width: 0; height: 0; color: transparent; }
.content-swiper {
	width: 100%; height: 100%;
  /*flex: 1; 
  display: flex;
  justify-content: center;
  align-items: center;
  overflow-y: auto;  */
}
.tab-item-wrapper {
  display: inline-flex;
  padding: 0;
}
.tab-item {
  display: inline-block;
	height: 100rpx;
	width: 88px; overflow-x: hidden;
	text-overflow: ellipsis; /* 超出部分显示省略号 */
  line-height: 100rpx;
  position: relative;
  font-size: 32rpx;
	color: #666;
	text-align: center;
}

.tab-item.active {
  color: #2fc6a6;
  font-weight: bold;
}
.indicator {
  display: none;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #2fc6a6;
}

.indicator.show {
  display: block;
}

/* ===步骤进度条=== */
/* 容器样式，设置为横向布局 */
.progress-container {
  display: flex;
  border-radius: 20px;
  padding: 10px 20px;
  /* 隐藏超出部分，避免引导线溢出 */
  overflow: hidden; 
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 10px;
  position: relative; 
  /* 固定宽度，确保引导线对齐 */
  width: 50px; 
}

.step-icon {
  width: 28px;
  height: 28px;
  border-radius: 50%;
	background-color: #bde2de;
	border:1px solid #bde2de;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 14px;
}
.step-icon.active{border-color: #069e8c;}
.step-icon.done {background-color: #069e8c;border-color: #069e8c;}
.step-text {font-size: 12px;margin-top: 5px;color: #666; }

.guide-line {
  position: absolute;
  top: 15px;
  left: 100%;
  transform: translateY(-50%);
  width: 20px; 
  height: 2px;
  background-color: #bde2de;
}

.guide-line.done-line {
  background-color: #069e8c;
}
