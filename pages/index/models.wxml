						<view class="grid-item" catchtap="goListenTranslate"><text class="iconfont clip3 icon-zhongwenmingcheng"></text><text class="txts">听音择义</text></view>
						<view class="grid-item" catchtap="goListenSpell"><text class="iconfont clip3 icon-pincou"></text><text class="txts">听音拼词</text></view>
						<view class="grid-item"><button class="share-btn" catchtap="btnShare" open-type="share"><text class="iconfont icon-weixinfenxiang"></text><text class="txts">分享班群</text></button></view>
					</view>
				</view>
		
		</view>
	</view>
