<view class="page-background flex-container">
	<view class="profile-header top-section">
			<text class="profile-title">训练模块</text>
	</view>
	<view class="bottom-section" style="width: 100%;">
		<view style="width: 100%;"><image src="https://w.360e.cn/miniapi/Public/images/banner1.jpg" mode="widthFix" style="width: 100%;"></image></view>
		<view class="models-main">
				<view class="models">
					<view class="grid">
						<view class="grid-item" catchtap="goWordWrite"><text class="iconfont icon-lianxi_"></text><text class="txts">报听写</text></view>
						<view class="grid-item" catchtap="goWordSpeak"><text class="iconfont icon-maikefeng-XDY"></text><text class="txts">发音测评</text></view>
						<view class="grid-item" catchtap="goWordAnipop"><text class="iconfont icon-lianliankan"></text><text class="txts">单词消消乐</text></view>
