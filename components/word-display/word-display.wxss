/*===拼写本格式===*/
.word-info{ position: relative;}
.word-btn .word-shoucang,.word-btn .word-detail{color: #2fc6a6; border:1px solid #2fc6a6;background-color: #e4fdfa; border-radius: 8px; padding:0 3px; font-size: 12px; display: inline-block;}
.word-btn .word-shoucang{ border-color:#ccc; background-color: rgb(250, 250, 250); color:rgb(167, 165, 165); margin-right: 16rpx;}
.word-btn .hasCollect{ color: #f8d303; border-color:#f8d303;}
/* 拼写本容器，模拟四线格背景 */
.spelling-book {
	display: inline-block;
	margin:0 auto; 
  border-top: 1px solid #2fc6a6;
  border-bottom: 1px solid #2fc6a6;
  padding: 5px 20px;
  position: relative;
}
/* 生成中间两条虚线 */
.spelling-book::before,
.spelling-book::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  /* 使用线性渐变创建虚线效果 */
  background-image: linear-gradient(to right, #c5e9e5 50%, transparent 50%);
  background-size: 8px 1px; /* 虚线宽度和间隔 */
  background-repeat: repeat-x;
}

.spelling-book::before {
  top: 33%;
}
.spelling-book::after {
  top: 66%;
}
/* 单词所在行，让单词水平居中 */
.word-line {
  text-align: center;
}
/* 单词文本样式，可按需调整字体、大小等 */
.word-text {
	position: relative; /* 开启层级控制 */
  z-index: 1;         /* 文字层级高于虚线 */
  font-size: 30px;
  font-weight: bold;
  color: #000;
  font-family: Arial, sans-serif;
}
.word-text text{font-size: 30px; display:inline-block;}
.word-text text.active{color:#2fc6a6;}
