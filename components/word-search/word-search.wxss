@import "/app.wxss";

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-container {
  position: fixed;
  left: 50%;
  bottom: 10rpx;
  transform: translate(-50%, 0);
  z-index: 1000;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx; 
  position: relative;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-close {
  position: absolute; 
  top: 20rpx; 
  right: 20rpx; 
  font-size: 36rpx;
  color: #999;
  z-index: 10;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 单词内容样式 */
.word-content {
  padding-top: 20rpx;
}

.word-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.word-title {
  flex: 1;
}

.word-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.word-phonogram {
  font-size: 28rpx;
  color: #666;
}

.word-actions {
  display: flex;
}

.action-icon {
  font-size: 36rpx;
  color: #3498db;
  margin-left: 20rpx;
}

/* 词根词缀 */
.affix-section {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.affix-rule {
  color: #666;
  font-size: 24rpx;
}

/* 翻译区域 */
.translate-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.copy-translate {
  font-size: 28rpx;
  color: #3498db;
}

.translate-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}

/* 例句区域 */
.examples-section {
  margin-bottom: 40rpx;
}

.examples-list {
  margin-top: 15rpx;
}

.example-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.example-item:last-child {
  border-bottom: none;
}

.example-english {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.example-audio {
  font-size: 28rpx;
  color: #3498db;
  margin-left: 15rpx;
}

.example-audio.playing {
  color: #e74c3c;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.example-translate {
  font-size: 26rpx;
  line-height: 1.5;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.detail-btn {
  background: #3498db;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
}

.detail-btn:active {
  background: #2980b9;
  opacity: 0.9;
}