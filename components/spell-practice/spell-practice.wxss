.spell-practice {
  padding: 20rpx 0;
}

.result-section {
  margin-bottom: 40rpx;
}

.result-display {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  min-height: 60rpx;
}

.result-letter {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  font-size: 18px;
  font-weight: bold;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.result-letter.empty {
  background-color: #f5f5f5;
  color: #ccc;
  border: 1rpx dashed #ddd;
}

.result-letter.filled {
  background-color: #e4fdfa;
  color: #333;
  border: 1rpx solid #2fc6a6;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  color: #999;
  font-size: 20px;
}

.delete-btn .iconfont {
  font-size: 20px;
}

.progress-indicator {
  margin-top: 20rpx;
}

.progress-text {
  font-size: 12px;
  color: #666;
  text-align: center;
}

.options-section {
  margin-bottom: 30rpx;
}

.options-title {
  font-size: 14px;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.options-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
}

.option-letter {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  font-size: 18px;
  font-weight: bold;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 10rpx;
  transition: all 0.3s;
}

.option-letter.selected {
  background-color: #d0f0ea;
  color: #2fc6a6;
  transform: scale(0.95);
}

.option-letter:not(.selected):active {
  transform: scale(0.95);
}

.completion-section {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #f9f9f9;
}

.completion-message {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 16px;
  font-weight: bold;
}

.completion-message.correct {
  color: #09BB07;
}

.completion-message.incorrect {
  color: #e64340;
}

.completion-message .iconfont {
  font-size: 18px;
}