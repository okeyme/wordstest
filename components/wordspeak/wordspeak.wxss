/* 面板样式 */
.panel {
  margin: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.panel-head {
  padding: 20rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.panel-body {
  padding: 20rpx;
}

.legend {
  display: flex;
  font-size: 24rpx;
}

.legend text {
  margin-left: 15rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  color: white;
}

/* 星级评分 */
.star-rating {
  display: flex;
  align-items: center;
}

.star-rating .iconfont {
  margin-right: 8rpx;width:40rpx;height: 40rpx;
}

.score-text {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 字符和评分条布局 */
.chars-line, .score-bars {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.char-item {
  text-align: center;
  width: 60rpx;
  position: relative;
}

.tip-icon {
  position: absolute;
  top: -20rpx;
  right: -5rpx;
  font-size: 20rpx;
}

.score-bar {
  width: 40rpx;
  height: 100rpx;
  position: relative;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.bar-inner {
  position: absolute;
  bottom: 0;
  width: 100%;
  border-radius: 4rpx;
  transition: height 0.3s;
}

.loading-text{ color:#fb0; text-align: center; width:100%; text-align: center;}
