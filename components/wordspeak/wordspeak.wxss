@import "/app.wxss";

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-container {
  position: fixed;
	left: 50%;
	/*top: 50%;
	transform: translate(-50%, -50%);*/
	bottom:10rpx;
	transform: translate(-50%, 0);
  z-index: 1000;
  width: 90%;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx; position: relative;
}

.modal-title {
  height:40rpx;
}

.modal-info {
  font-size: 28rpx;
  margin: 10rpx 0;
}

.modal-close {
 position: absolute; top: 10rpx; right: 10rpx; font-size: 40rpx;
}



